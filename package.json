{
  "name": "sidetree-ethereum",
  "version": "0.0.1",
  "description": "Node.js implementation of the Sidetree ethereum module",
  "repository": {
    "type": "git",
    "url": "https://github.com/transmute-industries/sidetree-mono"
  },
  "license": "Apache-2.0",
  "scripts": {
    "start": "node dist/bin/server.js",
    "start:dev": "nodemon dist/bin/server.js",
    "copy-to-dist": "cp -r ./src/contracts/ ./dist/contracts/ && cp -r ./src/schemas/ ./dist/schemas/",
    "build": "tsc",
    "build:watch": "tsc -w",
    "test": "jest --coverage --verbose --runInBand --forceExit ",
    "test:watch": "yarn test --watch",
    "contracts:test": "truffle test ./test/Ethereum/*",
    "contracts:migrate:dev": "rm -rf ./src/contracts/ && truffle migrate --network development --reset && cp -r ./build/contracts/ ./src/contracts/",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "lint:fix": "tslint --fix --project .",
    "start-ganache": ". ./.env && ganache-cli -m \"$MNEMONIC\""
  },
  "dependencies": {
    "@koa/cors": "^2.2.1",
    "@types/koa-bodyparser": "^4.2.1",
    "bip39": "^2.5.0",
    "bluebird": "^3.5.1",
    "bs58": "^4.0.1",
    "dotenv": "^6.0.0",
    "ethereumjs-abi": "^0.6.6",
    "ethereumjs-tx": "^1.3.7",
    "ethereumjs-util": "^6.0.0",
    "hdkey": "^1.1.0",
    "http-status": "^1.3.1",
    "jsonschema": "^1.2.4",
    "koa": "^2.5.1",
    "koa-bodyparser": "^4.2.1",
    "koa-compose": "^4.1.0",
    "koa-compress": "^3.0.0",
    "koa-helmet": "^4.0.0",
    "koa-mount": "^4.0.0",
    "koa-pino-logger": "^2.1.3",
    "koa-router": "^7.4.0",
    "koa-router-version": "^1.2.0",
    "koa-static": "^5.0.0",
    "lodash": "^4.17.10",
    "multihashes": "^0.4.14",
    "node-fetch": "^2.3.0",
    "swagger-jsdoc": "^3.2.6",
    "swagger-ui-koa": "0.0.1",
    "truffle-contract": "^4.0.4",
    "truffle-hdwallet-provider": "^1.0.3",
    "web3": "^1.0.0-beta.36",
    "web3-provider-engine": "^14.1.0",
    "websocket": "^1.0.28"
  },
  "devDependencies": {
    "@babel/runtime": "^7.3.1",
    "@types/bluebird": "^3.5.20",
    "@types/bn.js": "^4.11.4",
    "@types/dotenv": "^4.0.3",
    "@types/formidable": "^1.0.31",
    "@types/jest": "^23.1.0",
    "@types/koa-compose": "^3.2.2",
    "@types/koa-compress": "^2.0.8",
    "@types/koa-convert": "^1.2.1",
    "@types/koa-helmet": "^3.1.2",
    "@types/koa-mount": "^3.0.1",
    "@types/koa-pino-logger": "^2.1.1",
    "@types/koa-router": "^7.0.28",
    "@types/koa__cors": "^2.2.2",
    "@types/lodash": "^4.14.109",
    "@types/node-fetch": "^2.1.4",
    "@types/supertest": "^2.0.4",
    "@types/swagger-jsdoc": "0.0.2",
    "jest": "^23.1.0",
    "merkle-tools": "^1.4.0",
    "nodemon": "^1.17.5",
    "supertest": "^3.1.0",
    "ts-jest": "^22.4.6",
    "ts-node": "^6.1.1",
    "tslint": "^5.10.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^2.9.2"
  }
